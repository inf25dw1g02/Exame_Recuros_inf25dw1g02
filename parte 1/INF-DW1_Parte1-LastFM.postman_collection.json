  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "packages": {},
        "requests": {},
        "exec": [
          "var sharedSecret = pm.collectionVariables.get(\"shared_secret\");\r",
          "var apiKey = pm.collectionVariables.get(\"api_key\");\r",
          "\r",
          "if (!pm.request.url.query.has(\"api_key\")) {\r",
          "    pm.request.addQueryParams(\"api_key=\" + apiKey);\r",
          "}\r",
          "\r",
          "var params = pm.request.url.query.toObject();\r",
          "var keys = Object.keys(params);\r",
          "\r",
          "keys.sort();\r",
          "\r",
          "var stringToSign = \"\";\r",
          "keys.forEach(function(key) {\r",
          "    if (key != \"format\" && key != \"callback\" && key != \"api_sig\") {\r",
          "        var value = pm.variables.replaceIn(params[key]);\r",
          "        stringToSign += key + value;\r",
          "    }\r",
          "});\r",
          "\r",
          "stringToSign += sharedSecret;\r",
          "\r",
          "var apiSig = CryptoJS.MD5(stringToSign).toString();\r",
          "pm.collectionVariables.set(\"api_sig\", apiSig);\r",
          "\r",
          "console.log(\"String assinada: \" + stringToSign); \r",
          "console.log(\"Assinatura gerada: \" + apiSig);"
        ]
      }
    },
